{
  "compilerOptions": {
    "outDir": "./dist/",
    // doesn't let values without type
    "noImplicitAny": true,
    "module": "ESNext",
    // in which version in should be compiled
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    // let "require("...") use as import ... from ...
    "esModuleInterop": true,
//    allow imports without "import * as package from ..."
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["config/src/setupTests.ts", "src"]
}